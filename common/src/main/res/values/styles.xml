<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- nine photos card style-->
    <style name="ImageItemStyle">
        <item name="android:scaleType">fitXY</item>
        <item name="android:visibility">gone</item>
        <!--<item name="android:padding">1dp</item>-->
    </style>
    <style name="WidgetTextStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="WidgetImageStyle">
        <item name="android:scaleType">fitStart</item>
    </style>
    <style name="Loading_circle">
        <item name="android:indeterminateDrawable">@drawable/loading_circle</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>
    <style name="checkbox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>
</resources>
