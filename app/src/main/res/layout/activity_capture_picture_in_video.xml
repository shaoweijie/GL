<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.CapturePictureInVideoActivity">

    <TextView
        android:id="@+id/txt_select_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="请选择视频："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_select_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择视频"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_select_video" />

    <Button
        android:id="@+id/btn_capture_video_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频截取图片"
        app:layout_constraintStart_toEndOf="@+id/btn_select_video"
        app:layout_constraintTop_toBottomOf="@+id/txt_select_video" />

    <EditText
        android:id="@+id/edit_capture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="16"
        app:layout_constraintStart_toEndOf="@+id/btn_capture_video_picture"
        app:layout_constraintTop_toBottomOf="@+id/txt_select_video" />

    <TextView
        android:id="@+id/txt_select_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="请选择图片："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select_video" />

    <Button
        android:id="@+id/btn_select_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择图片"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_select_picture" />

    <TextView
        android:id="@+id/txt_select_wh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="请选择一行个数："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select_picture" />

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_select_wh" />

    <Button
        android:id="@+id/btn_combination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合成图片"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_weight" />

    <TextView
        android:id="@+id/txt_combination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="生成路径："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_combination" />

    <Button
        android:id="@+id/btn_fast_select_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速选取截取图片"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_combination" />
</androidx.constraintlayout.widget.ConstraintLayout>